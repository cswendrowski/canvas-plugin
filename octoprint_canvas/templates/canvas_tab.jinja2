<div class="row">
	<div class="distance" style="margin-left: 50px">
			<div class="row">
				<h4>Canvas Status</h4>
				<p>Connection Status: <span id="connection-state-msg-canvas" class="text-muted">Not Connected</span></p>
			</div>
			<div class="row" style="margin-top: 10px">
				<form data-bind="submit: connectCanvas">
					<label class="label-spacing">Email: <input type="email" data-bind="value: userEmail" required autocomplete="on"></label>
					<label class="label-spacing">Password: <input type="password" data-bind="value: password" required></label>
					<div style="margin-top: 10px">
						<button class="btn btn-primary">Connect a Canvas Account</button>
						<h5><a class="canvas-register" target="_blank" href="https://canvas3d.io/signup">Don't have an account?</a></h5>
					</div>

				</form>
			</div>
			<hr>
			<div class="row">
				<h4>Connected Accounts:</h4>
				<ul class="registered-accounts"></ul>
			</div>
			<hr>
			<div class="row">
				<h4>Apply Canvas Theme</h4>
				<div class="checkbox">
					<label><input class="theme-input" type="checkbox" checked>Turn On/Off</label>
				</div>
			</div>
	</div>
</div>
